    "inspect:npx": "ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc ETHEREUM_RPC_URL=https://eth.llamarpc.com node ./dist/mcp-server.js | npx -y @modelcontextprotocol/inspector",
    "inspect": "ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc ETHEREUM_RPC_URL=https://eth.llamarpc.com node ./dist/mcp-server.js | pnpm -s dlx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@stargatefinance/stg-evm-sdk-v2": "^1.0.0",
