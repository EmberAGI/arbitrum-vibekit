# Required - Agent wallet for signing CLOB orders
A2A_TEST_AGENT_NODE_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
# Required - OpenAI for LLM (if using LLM-based strategy)
OPENAI_API_KEY=

# Polygon RPC (for on-chain queries)
POLYGON_RPC_URL=

NEXT_PUBLIC_POLYGON_RPC_URL=
# Polymarket API endpoints (optional, defaults shown)
POLYMARKET_CLOB_API=https://clob.polymarket.com
POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com
POLYMARKET_DATA_API=https://data-api.polymarket.com


# Strategy configuration (optional)
POLY_MIN_SPREAD_THRESHOLD=0.02
POLY_MAX_POSITION_SIZE_USD=1
POLY_PORTFOLIO_RISK_PCT=50

# Polling interval for cron scheduler (default: 300000ms = 5 minutes)
# For run in web with ui configure polling time in web folder (check .env of web)
#POLY_POLL_INTERVAL_MS=300000


# Opportunity execution control
POLY_MIN_PROFIT_USD=0.01
POLY_MAX_OPPORTUNITIES_PER_CYCLE=1
POLY_EXECUTE_ALL_OPPORTUNITIES=false

# Market fetching configuration
POLY_MAX_MARKETS=50
POLY_MARKET_OFFSET=-50
POLY_MAX_TOTAL_EXPOSURE_USD=2000000

# LLM Market Analysis - increase from 10 to 40 to find more opportunities
POLY_LLM_MAX_MARKETS=25

# Market fetching (already have rotation built-in)
POLY_MARKET_FETCH_LIMIT=50

# Wallet address that will fund trades (usually derived from private key)
POLY_FUNDER_ADDRESS=YOUR_PUBLIC_ADDRESS

# Debug mode
#POLYMARKET_DEBUG=true

# Thread ID (optional; if omitted, a UUIDv7 is generated)
#POLY_THREAD_ID=

# Keep the process alive after hire so in-process cron ticks can run (default: true)
POLY_KEEP_ALIVE=true
POLY_USE_LLM_DETECTION=true
POLY_LLM_MODEL=gpt-4o
POLY_AUTO_REDEEM=true

POLY_BYPASS_EXPOSURE_CHECK=true
