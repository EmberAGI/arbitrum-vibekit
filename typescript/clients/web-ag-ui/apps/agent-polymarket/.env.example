# Required - Agent wallet for signing CLOB orders
A2A_TEST_AGENT_NODE_PRIVATE_KEY=replace-with-private-key

# Required - OpenAI for LLM (if using LLM-based strategy)
OPENAI_API_KEY=sk-your-key-here

# Polygon RPC (for on-chain queries)
POLYGON_RPC_URL=https://polygon-rpc.com

# Polymarket API endpoints (optional, defaults shown)
#POLYMARKET_CLOB_API=https://clob.polymarket.com
#POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com
#POLYMARKET_DATA_API=https://data-api.polymarket.com

# Strategy configuration (optional)
#POLY_MIN_SPREAD_THRESHOLD=0.02
#POLY_MAX_POSITION_SIZE_USD=100
#POLY_PORTFOLIO_RISK_PCT=3
#POLY_POLL_INTERVAL_MS=30000

# LLM-based relationship detection (optional)
#POLY_USE_LLM_DETECTION=true
#POLY_LLM_MODEL=gpt-4o-mini
#POLY_MAX_MARKETS=50

# Wallet address that will fund trades (usually derived from private key)
#POLY_FUNDER_ADDRESS=0x...

# Debug mode
#POLYMARKET_DEBUG=true

# Thread ID (optional; if omitted, a UUIDv7 is generated)
#POLY_THREAD_ID=

# Keep the process alive after hire so in-process cron ticks can run (default: true)
#POLY_KEEP_ALIVE=true
