# Documentation RAG Agent Environment Variables
# Copy this file to .env and fill in your values

# Required - OpenAI API key for generating embeddings
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Required - OpenRouter API key for agent LLM capabilities  
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# Optional - LLM model to use (defaults to Claude 3.5 Sonnet)
# Available models: https://openrouter.ai/models
LLM_MODEL=anthropic/claude-3.5-sonnet

# Optional - Port to run the agent on (defaults to 3008)
PORT=3008

# Optional - Agent metadata
AGENT_NAME=Documentation RAG Agent
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=AI agent that can index and query documentation using RAG

# Optional - CORS settings (defaults to true)
ENABLE_CORS=true

# Optional - Base path for API routes
# BASE_PATH=/api/v1 