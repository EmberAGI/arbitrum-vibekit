{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "example_server": {
      "type": "stdio",
      "command": "node",
      "args": ["./servers/example/index.js"],
      "env": {
        "LOG_LEVEL": "info"
      }
    },
    "example_http": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "headers": {
        "Authorization": "Bearer $env:EXAMPLE_API_KEY"
      }
    }
  }
}
